@* @using System.IO
@inject IJSRuntime JS

@code {
	[EditorRequired][Parameter] public string[] JsModuleNames { get; set; }

	protected IJSObjectReference? JsModule;

	protected override async Task OnAfterRenderAsync(bool firstRender)
	{
		if (!firstRender)
			return;
		var loader = await JS.InvokeAsync<IJSObjectReference>("import", "./js/loader.js");

		JsModule = await loader.InvokeAsync<IJSObjectReference>(
			"loadModules",
			JsModuleNames
		);
		// JsModule = await JS.InvokeAsync<IJSObjectReference>("import", $"./js/{JsModuleNames}.js");
	}


}
 *@